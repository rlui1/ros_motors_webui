<div class="container">
    <div class="control-stack">
        <div class="landscape">
            <!--<div class="crosshairsl"></div>-->
            <div class="knobBlock" style="float:left">
                <input type="text" class="dial">
            </div>
            <span class="knobName" style="top:85px"></span>
        </div>
        <div class="portrait" style="float:right">
            <span class="knobName" style="padding-top:10px"></span>

            <div class="knobBlock" style="float:right">
                <input type="text" class="dial">
            </div>
            <!--<div class="crosshairsl" style="clear:right;"></div>-->
        </div>
        <div class="app-movement-controls top-buffer well">
            <div class="text-center">Movement controls:</div>
            <div class="row-fluid top-buffer">
                <button class="app-move-forward btn btn-primary" type="button"><span class="glyphicon glyphicon-circle-arrow-up" area-hidden="true"></span></button>
            </div>

            <div class="row-fluid">
                <button class="app-move-left btn btn-primary" type="button"><span class="glyphicon glyphicon-circle-arrow-left" area-hidden="true"></span></button>
                <button class="app-move-backward btn btn-primary" type="button"><span class="glyphicon glyphicon-circle-arrow-down" area-hidden="true"></span></button>
                <button class="app-move-right btn btn-primary" type="button"><span class="glyphicon glyphicon-circle-arrow-right" area-hidden="true"></span></button>
            </div>
        </div>
        <div class="expression-buttons"></div>
    </div>
</div>
